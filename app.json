{
  "name": "Feedback Bot",
  "description": "Feedback bot for Telegram",
  "keywords": [
    "telegram",
    "bot",
    "feedback"
  ],
  "repository": "https://github.com/polfpilf/feedback-bot",
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "env": {
    "HEROKU_APP_NAME": {
      "required": true,
      "description": "Please, paste the name of the app here"
    },
    "TELEGRAM_BOT_TOKEN": {
      "required": true,
      "description": "Telegram bot token (generated by BotFather)"
    },
    "TELEGRAM_WEBHOOK_PATH": {
      "required": true,
      "description": "A secret token for unauthorized access protection, shared with Telegram only"
    },
    "ADMIN_TOKEN": {
      "required": true,
      "description": "A secret token for admin authentication"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "options": {
        "version": "13"
      }
    }
  ]
}